<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @post.name %>
</p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Content:</b>
  <%= @post.content %>
</p>

<h2>Comments</h2>
<%= render @post.comments %>

<h2>Add a comment:</h2>
<%= render "comments/form" %>

<br />


<p>
  <% if can? :update, @post %>
    <%= link_to 'Edit Post', edit_post_path(@post) %> |
  <% end %>
  <%= link_to 'Back to Posts', posts_path %>
</p>
